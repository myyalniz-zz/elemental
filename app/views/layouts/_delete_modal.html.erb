<div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
        <!-- <strong><center>Delete input</center></strong> -->
        <%= form_tag({controller: "input_processings", action: "delete"}, method: "get", class: "form-inline") do %>
        
          <input name="live_event_id" type="hidden" value="<%= @event_id %>" />
          <div class="input-group">
          <% if @input_label.present? %>
            Input Label:  <input name="input_label" type="text" value="<%= @input_label %>" />
            <!-- <pre>input label : <%= @input_label %></pre> -->
          <% elsif @input_id.present?  %>
            Input ID: <input name="input_id" type="text" value="<%= @input_id %>" />
            <!-- <pre>input id : <%= @input_id %></pre> -->
          <% end %>
          </div>
          <%= button_tag(type: 'submit', class: "btn-sm btn-danger pull-right") do %>
                <i class="icon-ok icon-white"></i> Delete
          <% end %>
          <%= link_to "Cancel", "#", class: "btn-sm btn-default pull-right", data: {dismiss: "modal"} %>
          
        <% end %>
      </div>
      
      <div class="modal-body">
        <ul class="errors"></ul>

      </div>
<!--      <div class="modal-footer">
                   <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %> 
      </div>
      -->
  </div>
</div>        